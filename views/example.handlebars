<div class="container" id="resultsContainer">

  <div class="row">

    <div class="col-sm" id="resultsHeader">
      Results
    </div>
  </div>
  {{#each movies}}
  <div class="row" id="individualMovies">
    <div class="col-sm" id="movieResult">
      <div id="movieDetails">
        <span id="movieTitle">
          {{this.title}}
        </span>
        <br>
        <span id="movieRating">
          Rating: {{this.rating}}
        </span>
        <br>
        <span id="movieImage">
          <img id="resultImage" src="{{this.poster}}">
        </span>
      </div>
      <div id="buttons">
        <button class="plan" data-id="{{this.id}}" data-title="{{this.title}}" data-rating="{{this.rating}}"
          data-description="{{this.description}}" data-release="{{this.release_date}}"
          data-poster="{{this.poster}}">Plan to Watch</button>
        <br>
        <button class="complete" data-id="{{this.id}}" data-id="{{this.id}}" data-title="{{this.title}}"
          data-rating="{{this.rating}}" data-description="{{this.description}}" data-release="{{this.release_date}}"
          data-poster="{{this.poster}}">Completed</button>
        <br>
        <button class="drop" data-id="{{this.id}}=" data-id="{{this.id}}" data-title="{{this.title}}"
          data-rating="{{this.rating}}" data-description="{{this.description}}" data-release="{{this.release_date}}"
          data-poster="{{this.poster}}"> Dropped</button>
        <br>
      </div>
    </div>

  </div>
  {{/each}}
</div>